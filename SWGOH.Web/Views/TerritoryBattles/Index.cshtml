@model IEnumerable<SWGOH.Entities.TerritoryBattle>

@{
    ViewBag.Title = "Index";
}

@{
    Layout = null;
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Guild.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phase1.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phase2.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phase3.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phase4.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phase5.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phase6.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalStars)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Guild.Name)
            </td>
            <td>
                @if (item.Phase1_Id == null)
                {
                    @Html.ActionLink("Create New", "Create", "TerritoryBattlePhases")
                }
                else
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })                    
                }
                @Html.DisplayFor(modelItem => item.Phase1.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phase2.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phase3.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phase4.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phase5.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phase6.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalStars)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
